{
  "name": "wobbly-frontend",
  "version": "0.1.0",
  "private": true,
  "main": "./node_modules/react-native-scripts/build/bin/crna-entry-web.js",
  "scripts": {
    "start": "react-native-scripts-ts start",
    "eject": "react-native-scripts-ts eject",
    "android": "react-native-scripts-ts android",
    "ios": "react-native-scripts-ts ios",
    "test": "jest",
    "web": "webpack-dev-server -d --config ./webpack.config.js  --inline --hot --colors --content-base public/ --history-api-fallback --host 0.0.0.0",
    "build": "NODE_ENV=production webpack -p --config ./webpack.config.js",
    "pretty": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "tslint -c tslint.json \"src/**/*.{ts,tsx}\"",
    "lint:fix": "tslint -c tslint.json --fix \"src/**/*.{ts,tsx}\""
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css}": [
      "yarn pretty",
      "yarn lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "printWidth": 120,
    "parser": "typescript"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "preset": "jest-expo",
    "testMatch": [
      "**/__tests__/**/*.[tj]s?(x)",
      "**/?(*.)(spec|test).[tj]s?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/?!(react-router)"
    ]
  },
  "dependencies": {
    "expo": "^27.0.1",
    "expo-web": "^0.0.12",
    "formik": "^1.3.0",
    "react": "16.3.1",
    "react-art": "^16.5.2",
    "react-dom": "~16.4.0",
    "react-native": "~0.55.2",
    "react-native-web": "^0.8.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-router-native": "^4.3.0",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "typesafe-actions": "^2.0.4",
    "whatwg-url": "^7.0.0",
    "yup": "^0.26.6"
  },
  "devDependencies": {
    "@types/expo__vector-icons": "^6.2.3",
    "@types/jest": "^22.2.3",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "@types/react-native": "^0.56.23",
    "@types/react-redux": "^6.0.9",
    "@types/react-router-native": "^4.2.3",
    "@types/react-test-renderer": "^16.0.1",
    "@types/yup": "^0.24.9",
    "babel-loader": "^7.1.2",
    "babel-plugin-expo-web": "^0.0.5",
    "babel-plugin-react-native-web": "^0.4.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-imports": "^1.4.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "css-loader": "^0.28.7",
    "file-loader": "^1.1.7",
    "husky": "^1.0.0-rc.14",
    "jest-expo": "~27.0.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "react-native-scripts": "latest",
    "react-native-scripts-ts": "1.15.0",
    "react-native-typescript-transformer": "^1.2.3",
    "react-test-renderer": "16.3.1",
    "style-loader": "^0.19.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^5.1.1",
    "tslib": "^1.9.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.8.3",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8"
  }
}
