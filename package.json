{
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "eject": "expo eject",
    "typecheck": "tsc --noEmit",
    "test": "yarn lint",
    "pretty": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "yarn typecheck && tslint -p tsconfig.json -c tslint.json \"src/**/*.{ts,tsx}\"",
    "lint:fix": "yarn typecheck && tslint -p tsconfig.json -c tslint.json --fix \"src/**/*.{ts,tsx}\"",
    "codegen": "dotenv -- apollo client:codegen -c apollo.config.js --target=typescript --addTypename --outputFlat src/generated/"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css}": [
      "yarn pretty",
      "yarn lint:fix",
      "git add"
    ]
  },
  "codegen": {
    "src/generated/**/*.{ts,tsx}": [
      "yarn codegen",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn codegen",
      "post-merge": "yarn install"
    }
  },
  "prettier": {
    "printWidth": 120,
    "parser": "typescript"
  },
  "resolutions": {
    "graphql": "14.0.2"
  },
  "dependencies": {
    "apollo-boost": "^0.1.28",
    "apollo-link-context": "^1.0.14",
    "expo": "^32.0.0",
    "formik": "^1.4.3",
    "graphql": "14.0.2",
    "graphql-tag": "^2.10.1",
    "hoist-non-react-statics": "^3.3.0",
    "inflection": "^1.12.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "react": "16.5.0",
    "react-apollo": "^2.4.1",
    "react-native": "https://github.com/expo/react-native/archive/sdk-32.0.0.tar.gz",
    "react-native-elements": "^1.0.0",
    "react-native-gifted-chat": "^0.7.2",
    "react-native-iphone-x-helper": "^1.2.0",
    "react-native-keyboard-spacer": "^0.4.1",
    "react-navigation": "^3.0.9",
    "react-navigation-header-buttons": "^2.1.2",
    "tslib": "^1.9.3",
    "typesafe-actions": "^3.0.0",
    "yup": "^0.26.10"
  },
  "devDependencies": {
    "@types/expo": "^31.0.9",
    "@types/expo__vector-icons": "^9.0.1",
    "@types/graphql": "^14.0.5",
    "@types/hoist-non-react-statics": "^3.0.1",
    "@types/inflection": "^1.5.28",
    "@types/jest": "^23.3.13",
    "@types/lodash": "^4.14.121",
    "@types/react": "^16.8.3",
    "@types/react-dom": "^16.8.1",
    "@types/react-native": "^0.57.36",
    "@types/react-native-keyboard-spacer": "^0.4.1",
    "@types/react-navigation": "^3.0.2",
    "@types/react-test-renderer": "^16.0.3",
    "@types/yup": "^0.26.7",
    "apollo": "^2.5.1",
    "babel-preset-expo": "^5.0.0",
    "dotenv-cli": "^1.4.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.3",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.1"
  },
  "private": true
}
